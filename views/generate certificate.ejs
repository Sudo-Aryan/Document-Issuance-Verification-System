<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-zinc-900 text-white py-5 flex flex-col items-center justify-center"
>
  <div class="flex flex-col items-center gap-5 px-4">
    <h3><%= issuer.username %></h3>
    <form
      class="w-full"
      action="/issuer/generateCertificate"
      method="post"
      enctype="multipart/form-data"
    >
      <input
        class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900"
        type="text"
        placeholder="Name"
        name="name"
      />
      <input
        class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900"
        type="text"
        placeholder="Course"
        name="CourseName"
      />
      <input
        hidden
        class="w-full bg-zinc-900 px-3 py-3 border-2 border-zinc-800 rounded-md mt-2"
        type="text"
        placeholder="Org Name"
        name="OrgName"
        value="<%= issuer.username %>"
      />
      <input
        hidden
        class="w-full bg-zinc-900 px-3 py-3 border-2 border-zinc-800 rounded-md mt-2"
        type="text"
        placeholder="User address"
        name="useraddress"
        value="<%= issuer.useraddress %>"
      />
      <input type="file" name="doc" value="doc" />
      <button type="submit">Issue Certificate</button>
    </form>
  </div>
</div>
<% include ./partials/footer.ejs %>
